<Window x:Class="SimpleFormulaDrawer.interfac.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainForm" Height="449" Width="149" Initialized="Window_Initialized" SizeChanged="Window_SizeChanged" MinWidth="150" MinHeight="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*" />
            <RowDefinition Height="34*" />
            <RowDefinition Height="185*" />
            <RowDefinition Height="326*" />
        </Grid.RowDefinitions>
        <ListBox Height="185" HorizontalAlignment="Stretch" Name="FormulListBox1" VerticalAlignment="Top" ItemsSource="{Binding}" SelectionChanged="listBox1_SelectionChanged" Grid.Row="2" Background="#23000000" />
        <ProgressBar Height="19" HorizontalAlignment="Stretch" Name="progressBar1" VerticalAlignment="Bottom" Grid.Row="3" Margin="0,0,1,0" />
        <Button Content="Add" HorizontalAlignment="Stretch" Name="AddFormul" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <TextBox HorizontalAlignment="Stretch" Name="FormulText" VerticalAlignment="Stretch" Grid.Row="1" Background="#23000000" />
    </Grid>
</Window>
